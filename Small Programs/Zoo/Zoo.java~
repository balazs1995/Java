import java.util.ArrayList;
public class Zoo{

  public static void main(String[] args){

   Fox fox = new Fox();
   Tiger tiger = new Tiger();
   Lion lion = new Lion();

   ArrayList<Animals> zoo = new ArrayList<Animals>();
   zoo.add(new Fox());
   zoo.add(new Lion());
   zoo.add(new Tiger());

   for (Animals anim: zoo) {
   		anim.kind();
   }

   }
}
